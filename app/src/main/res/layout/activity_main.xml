<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="softwareengineeringteam3.bossnow.MainActivity">

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:onClick="btnLogin_click"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnRegistration" />

    <Button
        android:id="@+id/btnRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registration"
        android:onClick="btnRegistration_click"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="123dp"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/btnLogin"
        android:layout_alignStart="@+id/login_button" />


    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        tools:layout_editor_absoluteY="192dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/btnRegistration"
        android:layout_alignParentStart="true" />

</RelativeLayout>
